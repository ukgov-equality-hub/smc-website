<!-- Pagination -->
<div class="wrapper-section p-bottom-10">
    <div class="grid-container">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                {% if posts.pagination.prev %}
                    <li>
                        <a class="{{ posts.pagination.prev.link|length ? '' : 'is-disabled'}} control" href="{{posts.pagination.prev.link}}" aria-label="Previous page">
                            <span class="szicon-chevron-left"></span>
                            <span class="show-for-sr">Previous page</span>
                        </a>
                    </li>
                {% endif %}
                {% for page in posts.pagination.pages %}
                    {% if not page.link %}
                        <li><a class="is-current"><span class="show-for-sr">You're on page</span> <span>{{page.title}}</span></a></li>
                    {% else %}
                        <li><a href="{{page.link}}" aria-label="Page {{page.title}}"><span>{{page.title}}</span></a></li>
                    {% endif %}

                {% endfor %}
                {% if posts.pagination.next %}
                    <li>
                        <a class=" {{posts.pagination.next.link|length ? '' : 'invisible'}} control" href="{{posts.pagination.next.link}}" aria-label="Next page">
                            <span class="szicon-chevron-right"></span>
                            <span class="show-for-sr">Next page</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>

