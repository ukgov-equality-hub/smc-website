source 'https://rubygems.org'
ruby '2.7.2'

gem 'capistrano', '3.7.0'
gem 'capistrano-composer'
gem 'capistrano-wpcli'
gem 'capistrano-rvm'
gem 'capistrano-ssh-doctor'

# Use rbenv or rvm to install correct ruby versions
# e.g. rbenv install 2.7.2  or rbenv local 2.7.2
# If using rbenv - makes sure you remember to add `rbenv init` to your shell to enable the shims and automcomplete
# e.g.  $ echo 'eval "$(rbenv init -)"' >> $HOME/.bash_profile
#       $ source ~/.bash_profile
#       $ exec $SHELL -l
#
# run the version of capistrano with bundle
# bundle exec cap -T
